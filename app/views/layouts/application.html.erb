<!DOCTYPE html>
<html>
<head>
  <title>Мое приложение</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>
<body>
<!-- Шапка -->
<header class="header">
  <div class="header-container">
    <!-- Логотип или название -->
    <div class="header-logo">
      <%= link_to "Видео-портал", root_path, class: "header-logo-link" %>
    </div>

    <!-- Навигация -->
    <nav class="header-nav">
      <%= link_to "Главная", root_path, class: "header-link" %>
      <%= link_to "Фильмы", films_path, class: "header-link" %>
      <%= link_to "Профиль", profile_path(current_user), class: "header-link" if user_signed_in? %>
    </nav>

    <!-- Кнопки входа/выхода -->
    <div class="header-actions">
      <% if user_signed_in? %>
        <%= button_to "Выход", destroy_user_session_path, method: :delete, class: "header-button logout" %>
      <% else %>
        <%= link_to "Вход", new_user_session_path, class: "header-button login" %>
      <% end %>
    </div>
  </div>
</header>

<!-- Основной контент -->
<div class="content">
  <%= yield %>
</div>
</body>
</html>
