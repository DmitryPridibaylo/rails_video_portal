<div class="vk-auth-container">
  <div class="vk-auth-header">
    <h1>Регистрация</h1>
  </div>

  <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "vk-auth-form" } do |f| %>
    <div class="vk-auth-field">
      <%= f.label :email, "Электронная почта" %>
      <%= f.email_field :email, autofocus: true, class: "vk-auth-input" %>
    </div>

    <div class="vk-auth-field">
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "vk-auth-input" %>
    </div>

    <div class="vk-auth-field">
      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "vk-auth-input" %>
    </div>

    <div class="vk-auth-actions">
      <%= f.submit "Зарегистрироваться", class: "vk-auth-button" %>
    </div>
  <% end %>

  <div class="vk-auth-footer">
    <%= link_to "Уже есть аккаунт? Войти", new_session_path(resource_name), class: "vk-auth-link" %>
  </div>
</div>
