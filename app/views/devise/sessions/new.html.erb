<div class="vk-auth-container">
  <div class="vk-auth-header">
    <h1>Вход</h1>
  </div>

  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), html: { class: "vk-auth-form" } do |f| %>
    <div class="vk-auth-field">
      <%= f.label :email, "Электронная почта" %>
      <%= f.email_field :email, autofocus: true, class: "vk-auth-input" %>
    </div>

    <div class="vk-auth-field">
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "vk-auth-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="vk-auth-field vk-auth-checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Запомнить меня" %>
      </div>
    <% end %>

    <div class="vk-auth-actions">
      <%= f.submit "Войти", class: "vk-auth-button" %>
    </div>
  <% end %>

  <div class="vk-auth-footer">
    <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "vk-auth-link" %>
    <%= link_to "Регистрация", new_registration_path(resource_name), class: "vk-auth-link" %>
  </div>
</div>
